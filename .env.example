# Client Dashboard Environment Variables
# Copy this file to .env and fill in the values
# NEVER commit .env to version control

# =============================================================================
# Firebase Configuration (Required)
# =============================================================================
# Get these from Firebase Console → Project Settings → Your apps → Web app

VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_DATABASE_URL=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

# =============================================================================
# Firebase App Check (Recommended for production)
# =============================================================================
# Get from Firebase Console → App Check → Apps → reCAPTCHA v3

VITE_FIREBASE_APP_CHECK_SITE_KEY=

# =============================================================================
# API Security (Optional - enables authentication on proxy server)
# =============================================================================
# If set, requires X-API-Key header or apiKey query parameter
# If not set, no authentication is required (backward compatible)

API_KEY=

# Comma-separated list of allowed origins for CORS
# If not set, allows all origins (*)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate limiting: max requests per 15 minutes per IP
RATE_LIMIT_MAX=100

# =============================================================================
# AI Features (Optional)
# =============================================================================
# Google Gemini API key for AI-powered features

GEMINI_API_KEY=

# =============================================================================
# Novu Notifications (Optional)
# =============================================================================
# In-app notification system

VITE_NOVU_APP_ID=
